{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["nodes", "edges"],
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "project": { "type": "string" },
        "version": { "type": "integer" },
        "updated": { "type": "string" },
        "central_claim": { "type": "string" }
      }
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "label"],
        "properties": {
          "id": { "type": "string" },
          "type": {
            "type": "string",
            "enum": [
              "claim",
              "contribution",
              "dataset",
              "method",
              "result",
              "concept",
              "limitation",
              "def",
              "figure",
              "table",
              "citation"
            ]
          },
          "label": { "type": "string" },
          "refs": {
            "type": "array",
            "items": { "type": "string" }
          },
          "notes": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["source", "target", "relation"],
        "properties": {
          "source": { "type": "string" },
          "target": { "type": "string" },
          "relation": {
            "type": "string",
            "enum": [
              "supports",
              "refutes",
              "depends_on",
              "tests",
              "measures",
              "qualifies",
              "addresses",
              "elaborates",
              "caveat",
              "leads_to",
              "used_by"
            ]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
